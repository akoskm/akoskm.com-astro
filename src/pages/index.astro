---
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import LinkButton from "@components/LinkButton.astro";
import Hr from "@components/Hr.astro";
import Card from "@components/Card";
import { SITE } from "@config";
import { getPreviewPosts } from "lib/clients";

const data = await getPreviewPosts();
const recentPosts = data.publication.posts.edges
  .slice(0, SITE.postPerIndex)
  .map(({ node }) => node);
---

<Layout>
  <Header />
  <main id="main-content">
    <section id="hero">
      <h1>Hey üëã, I'm √Åkos.</h1>
      <div class="prose">
        <p>
          I help startups and product teams <span class="font-black text-orange-600">build and ship AI-powered software</span>‚Äîfrom
          <a href="/tags/llm/">LLM integrations</a> and
          <a href="/tags/ai-tools/">MCP servers</a> to cutting-edge
          <span class="font-black text-orange-600">Recursive Language Models</span>.
        </p>
        <p>
          18+ years building software. Author of 6 books. Now focused on turning AI capabilities into production-ready products.
        </p>
        <p>
          <strong>Available for consulting, contracting, or fractional CTO roles.</strong>
        </p>
        <p>
          üìß <a href="mailto:hello@akoskm.com">hello@akoskm.com</a>
        </p>
      </div>
    </section>

    <Hr />

    <section id="educator">
      <div class="prose">
        <p>
          I also write about what I learn‚Äîpractical articles on
          <a href="/tags/reactjs/">React</a>,
          <a href="/tags/typescript/">TypeScript</a>,
          <a href="/tags/nextjs/">Next.js</a>, and
          <a href="/tags/ai/">AI tooling</a>.
        </p>
        <p>
          Weekly newsletter for developers:
          <LinkButton
            className="inline-block rounded-md border border-skin-line bg-skin-card px-4 py-2 font-medium hover:bg-skin-card-muted hover:text-skin-accent"
            href="https://akoskm.substack.com/welcome?utm_source=akoskm.com&utm_medium=website"
          >
            ‚úâÔ∏è Subscribe
          </LinkButton>
        </p>
      </div>
    </section>

    <Hr />

    {
      recentPosts.length > 0 && (
        <section id="recent-posts">
          <h2>Recent Posts</h2>
          <ul>
            {recentPosts.map(
              (post, index) => index < SITE.postPerIndex && <Card post={post} />
            )}
          </ul>
        </section>
      )
    }

    <div class="all-posts-btn-wrapper">
      <LinkButton href="/posts/">
        All Posts
        <svg xmlns="http://www.w3.org/2000/svg"
          ><path
            d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
          ></path>
        </svg>
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>

<style>
  /* ===== Hero Section ===== */
  #hero {
    @apply pb-4 pt-4;
  }
  #hero h1 {
    @apply inline-block text-xl font-bold sm:my-4 sm:text-3xl;
  }
  #hero .rss-link {
    @apply mb-4;
  }
  #hero .rss-icon {
    @apply mb-2 h-6 w-6 scale-110 fill-skin-accent sm:mb-2 sm:scale-125;
  }
  #hero p {
    @apply my-1;
  }
  .social-wrapper {
    @apply mt-2 flex flex-col sm:flex-row sm:items-center;
  }
  .social-links {
    @apply mb-1 mr-2 whitespace-nowrap sm:mb-0;
  }

  /* ===== Educator Section ===== */
  #educator {
    @apply pb-4 pt-4;
  }
  #educator p {
    @apply my-1;
  }

  /* ===== Featured & Recent Posts Sections ===== */
  #featured,
  #recent-posts,
  #testimonials {
    @apply pb-4 pt-6;
  }
  #featured h2,
  #recent-posts h2,
  #testimonials h2 {
    @apply text-2xl font-semibold tracking-wide;
  }
  .all-posts-btn-wrapper {
    @apply my-4 text-center;
  }
</style>
