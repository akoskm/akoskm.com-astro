---
import { SITE } from "@config";
import Breadcrumbs from "@components/Breadcrumbs.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
import Layout from "@layouts/Layout.astro";
---

<Layout title={`Hire Me | ${SITE.title}`}>
  <Header />
  <Breadcrumbs />
  <main id="main-content">
    <section class="mx-auto mb-28 max-w-xl">
      <h1 class="mb-4 text-2xl tracking-wider sm:text-3xl">Let's talk!</h1>
      <p class="mb-8 text-skin-base">
        Tell me about your project and I'll get back to you within 24 hours.
      </p>

      <form
        name="hire-me"
        method="POST"
        action="/success"
        data-netlify="true"
        netlify-honeypot="bot-field"
        class="flex flex-col gap-5"
      >
        <input type="hidden" name="form-name" value="hire-me" />
        <p class="hidden">
          <label>
            Don't fill this out: <input name="bot-field" />
          </label>
        </p>

        <div>
          <label for="name" class="mb-2 block text-sm font-medium">
            Name & Company
          </label>
          <input
            type="text"
            id="name"
            name="name"
            required
            class="w-full rounded-lg border border-skin-line bg-skin-card px-4 py-2 focus:border-skin-accent focus:outline-none"
          />
        </div>

        <div>
          <label for="email" class="mb-2 block text-sm font-medium">
            Email
          </label>
          <input
            type="email"
            id="email"
            name="email"
            required
            class="w-full rounded-lg border border-skin-line bg-skin-card px-4 py-2 focus:border-skin-accent focus:outline-none"
          />
        </div>

        <div>
          <label for="budget" class="mb-2 block text-sm font-medium">
            Budget
          </label>
          <select
            id="budget"
            name="budget"
            required
            class="w-full rounded-lg border border-skin-line bg-skin-card px-4 py-2 focus:border-skin-accent focus:outline-none"
          >
            <option value="">Select a range</option>
            <option value="$1,000-$5,000">$1,000 - $5,000</option>
            <option value="$5,000-$10,000">$5,000 - $10,000</option>
            <option value="$10,000+">$10,000+</option>
          </select>
        </div>

        <div>
          <label for="message" class="mb-2 block text-sm font-medium">
            Message
          </label>
          <textarea
            id="message"
            name="message"
            rows="5"
            required
            class="w-full resize-none rounded-lg border border-skin-line bg-skin-card px-4 py-2 focus:border-skin-accent focus:outline-none"
          ></textarea>
        </div>

        <button
          type="submit"
          class="w-full rounded-lg bg-skin-accent px-6 py-3 font-medium text-skin-inverted transition-opacity hover:opacity-90"
        >
          Send
        </button>
      </form>
    </section>
  </main>
  <Footer />
</Layout>
